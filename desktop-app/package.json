{
  "name": "collaborative-code-editor",
  "version": "1.0.0",
  "description": "A collaborative code editor desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac --config.mac.identity=null --config.mac.target=dir"
  },
  "build": {
    "appId": "com.collaborative.codeeditor",
    "productName": "Collaborative Code Editor",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dir",
      "icon": "build/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": null
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "monaco-editor": "^0.52.2",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "dotenv": "^16.5.0",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3"
  }
}
